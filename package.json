{
  "name": "teleport-docs-next",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "git-update": "git submodule update --remote",
    "build-node": "rm -rf .build && tsc --build tsconfig.node.json",
    "add-symlinks": "node ./scripts/add-symlinks.js",
    "copy-images": "node ./scripts/copy-images.js",
    "preflight": "yarn build-node && yarn add-symlinks",
    "dev": "yarn preflight && next dev",
    "build": "yarn preflight && next build && yarn copy-images",
    "update-and-build": "yarn git-update; if [ \"${VERCEL_ENV}\" = \"preview\" ]; then yarn build-node; yarn build-storybook; fi; yarn build",
    "start": "next start",
    "test": "jest --runInBand",
    "test:watch": "yarn test --watch",
    "base:eslint": "eslint --cache --cache-location node_modules/.cache/eslint '**/*.{js,jsx,ts,tsx}'",
    "base:prettier": "prettier '**/*.{js,jsx,ts,tsx,json}'",
    "lint": "yarn base:eslint --fix && yarn base:prettier --write -l",
    "lint-check": "yarn base:eslint && yarn base:prettier --check",
    "typecheck": "tsc --noEmit --skipLibCheck --incremental --tsBuildInfoFile node_modules/.cache/tsc/tsbuildinfo --project .",
    "markdown-lint": "remark 'content/**/docs/pages/**/*.mdx' --frail",
    "markdown-lint-external-links": "WITH_EXTERNAL_LINKS=true yarn markdown-lint",
    "markdown-fix": "FIX=true yarn markdown-lint -o",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./public/storybook/"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{css,json}": "prettier --check"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "dependencies": {
    "@mdx-js/mdx": "^2.0.0-next.9",
    "@mdx-js/react": "^2.0.0-next.9",
    "@reach/listbox": "^0.15.2",
    "@styled-system/css": "^5.1.5",
    "@types/hast": "^2.3.2",
    "docsearch.js": "^2.6.3",
    "final-form": "^4.20.2",
    "micromark-extension-gfm": "0.3.3",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-final-form": "^6.5.3",
    "react-driftjs": "^1.1.11",
    "react-globe.gl": "^2.18.7",
    "react-use": "^17.2.4",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5",
    "swr": "^0.5.6",
    "throttle-debounce": "^3.0.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@mdx-js/loader": "^2.0.0-next.9",
    "@next/bundle-analyzer": "^11.0.1",
    "@storybook/addon-actions": "^6.3.3",
    "@storybook/addon-essentials": "^6.3.3",
    "@storybook/addon-links": "^6.3.3",
    "@storybook/react": "^6.3.3",
    "@svgr/webpack": "^5.5.0",
    "@types/glob": "^7.1.4",
    "@types/jest": "^26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/rebass": "^4.0.8",
    "@types/styled-components": "^5.1.10",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "ajv": "^7.2.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.13.1",
    "date-fns": "^2.22.1",
    "eslint": "^7.30.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "estree-util-value-to-estree": "^1.2.0",
    "file-loader": "^6.2.0",
    "glob": "^7.1.7",
    "got": "11.8.2",
    "hast-util-heading-rank": "^1.0.1",
    "hast-util-to-string": "^1.0.4",
    "jest": "^27.0.6",
    "js-yaml": "^4.1.0",
    "lint-staged": "^11.0.0",
    "mdast-util-from-markdown": "^0.8.5",
    "mdast-util-frontmatter": "^0.2.0",
    "mdast-util-gfm": "^0.1.2",
    "mdast-util-mdx": "^0.1.1",
    "micromark-extension-mdxjs": "^0.3.0",
    "node-cache": "^5.1.2",
    "prettier": "^2.3.2",
    "prettier-config-standard": "^4.0.0",
    "probe-image-size": "^7.2.1",
    "rehype-highlight": "^4.1.0",
    "rehype-slug": "^4.0.1",
    "rehype-stringify": "^8.0.0",
    "remark-cli": "9.0.0",
    "remark-copy-linked-files": "^1.5.0",
    "remark-frontmatter": "^3.0.0",
    "remark-gfm": "^1.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-mdx": "^2.0.0-next.9",
    "remark-parse": "^9.0.0",
    "remark-preset-lint-markdown-style-guide": "^4.0.0",
    "remark-rehype": "^8.1.0",
    "remark-validate-links": "^10.0.4",
    "simple-git-hooks": "^2.5.1",
    "stringify-object": "^3.3.0",
    "ts-jest": "^27.0.3",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.5",
    "unified": "^9.2.1",
    "unist-builder": "^2.0.3",
    "unist-util-visit": "^2.0.3",
    "url-loader": "^4.1.1",
    "vfile": "^4.2.1",
    "yaml-loader": "^0.6.0"
  }
}
